<view class='adminPerson'>
	<!-- 菜谱分类列表 (菜谱分类列表) -->
	<view class='cpfllb'>
		<view wx:for="{{ types }}">
			<text class="txt">{{ item.typeName }}</text>
			<text class="btn" bindtap="_delType" data-id="{{ item._id }}" data-index="{{ index }}" style="background:#f1613c">删除</text>
			<text  data-index="{{ index }}" bindtap="_editPage" class="btn" style="background:#4578ff">修改</text>
		</view>
	
	</view>
	<!--    页面 （菜谱添加分类） -->
	<view class='cptjfl'>

		<mp-cell prop="mobile" ext-class=" weui-cell_vcode">
			<!-- 输入菜谱分类 -->
			<input model:value="{{ addVal }}" class="weui-input" placeholder="输入菜谱分类" />
			<view slot="footer" class="weui-vcode-btn" bindtap="_typeAdd">添加</view>
		</mp-cell>
	</view>
	<!-- 修改页面  （菜谱修改分类）-->
	<view class='cpxgfl'>

		<mp-cell prop="mobile" ext-class=" weui-cell_vcode">
			<!-- 输入菜谱分类 -->
			<input model:value="{{ updVal }}" class="weui-input" placeholder="输入菜谱分类" />
			<view slot="footer" bindtap="_doUpdate" class="weui-vcode-btn">修改</view>
		</mp-cell>

	</view>

</view>